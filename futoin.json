{
  "name": "futoin-cid",
  "version": "1.0.0",
  "plugins": {
    "release": "futoin.cid.misc.releasetool"
  },
  "toolTune": {
    "release": {
      "python": "futoin/cid/__init__.py"
    }
  },
  "vcs": "git",
  "rms": "twine",
  "rmsRepo": "ignored",
  "tools": {
    "release": "embedded",
    "python": "*",
    "setuptools": true
  },
  "entryPoints": {
    "main": {
      "tool": "exe",
      "path": "bin/cid"
    }
  },
  "actions": {
    "autopep8": [
      "@cid tool exec pip -- install -q autopep8",
      "autopep8 -i -r futoin"
    ],
    "yapf": [
      "@cid tool exec pip -- install -q yapf",
      "yapf -i -r futoin"
    ],
    "check": [
      "@default",
      "@cid tool exec pip -- install -q pylint nose",
      "pylint -E futoin --ignore=contrib",
      "pylint -E tests/"
    ]
  }
}
